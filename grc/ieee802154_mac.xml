<?xml version="1.0"?>
<block>
	<name>IEEE802.15.4 MAC</name>
	<key>ieee802154_mac</key>
	<category>IEEE802.15.4</category>
	<import>import ieee802154</import>
	<make>ieee802154.mac($debug)</make>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
	<sink>
		<name>pdu in</name>
		<type>message</type>
	</sink>
	<sink>
		<name>app in</name>
		<type>message</type>
	</sink>
	<source>
		<name>pdu out</name>
		<type>message</type>
	</source>
	<source>
		<name>app out</name>
		<type>message</type>
	</source>

</block>
