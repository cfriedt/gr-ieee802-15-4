<?xml version="1.0"?>
<block>
	<name>Packet Sink</name>
	<key>ieee802154_packet_sink</key>
	<category>IEEE802.15.4</category>
	<import>import ieee802154</import>
	<make>ieee802154.packet_sink($th,$debug)</make>

	<param>
		<name>Threshold</name>
		<key>th</key>
		<value>10</value>
		<type>int</type>
	</param>

        <param>
                <name>Debug</name>
                <key>debug</key>
                <value>False</value>
                <type>bool</type>

                <option>
                        <name>Enable</name>
                        <key>True</key>
                </option>
                <option>
                        <name>Disable</name>
                        <key>False</key>
                </option>
        </param>

	<sink>
		<name>in</name>
		<type>float</type>
		<nports>1</nports>
	</sink>
	<source>
		<name>out</name>
		<type>message</type>
	</source>
</block>
